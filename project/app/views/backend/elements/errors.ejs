<% if(errors) {%> 
    <div class="row">
        <div class="col-lg-6">
            <div class="alert alert-danger" role="alert">
                <ul>
                <% errors.forEach((error) => {%>
                <% let errorString = error.param %>
                    <li><b><%= errorString.charAt(0).toUpperCase() + errorString.slice(1) %></b> : <%= error.msg %> </li>
                <% }) %> 
                </ul>
            </div>
        </div>
    </div>
<% } %> 