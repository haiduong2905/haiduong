<% include ./../../helper/filter-status %>
<% include ./../../helper/action %>
<% include ./../../helper/status %>
<% include ./../../helper/pagination %>

<!--Khai báo biến lưu trữ collection. Nếu thay đổi hay copy thì chỉ cần thay đổi ở đây-->
<%  
    const collection = 'items';
    const linkPrefix = systemConfigs.prefixAdmin + `/${collection}/`; // Chú ý dấu / ở cuối
%> 


<%- locals.flash %>
<!-- Dòng thông báo dc thay bằng tệp tin flash và dc kéo vào vị trí này bởi câu lệnh  <%- locals.flash %>
<div class="alert alert-success" role="alert">
    <span class="close-btn">&times;</span> Thay đổi Status thành công
</div>
-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                Search & Filter
                <a href="<%= linkPrefix %>status/all">
                    <span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
                </a>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="status-list col-sm-6 pl0">
                        <!-- Filter status -->
                        
                        <%- filterStatusHelper(collection, statusFilter, keyword) %>
                    </div>
                    <div class="col-sm-6">
                        <form action="<%= linkPrefix %>status/<%= currentStatus %>" method="GET">
                            <div class="input-group">
                                <input type="text" class="form-control" name="keyword" placeholder="Search for..." value="<%= keyword %>">
                                <span class="input-group-btn">
                                <button class="btn btn-info" type="submit">Search</button>
                                </span>
                                <span class="input-group-btn">
                                    <a href="<%= linkPrefix %>status/<%= currentStatus %>" class="btn btn-success" type="button">Clear</a>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                List Items
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
                <%- actionHelper(collection) %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" class="cbAll" />
                                    </th>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Ordering</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% items.forEach((item, index) => { %>
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="cid" value="<%= item.id %>" />
                                        </td>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%- statusHelper(collection, item.status, item.id) %>
                                        </td>
                                        <td>
                                            <input type="number" value="<%= item.ordering %>" class="text-center ordering">
                                        </td>
                                        <td>
                                            <a href="<%= linkPrefix %>form/<%= item.id %>" type="button" class="btn btn-warning btn-sm">Edit</a>
                                            <a href="<%= linkPrefix %>delete/<%= item.id %>" type="button" class="btn btn-danger btn-sm btn-delete">Delete</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12">   
        <%- paginationHelper(pagination,collection, currentStatus, keyword) %>
    </div>
</div>